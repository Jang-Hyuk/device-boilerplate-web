<!DOCTYPE html>
<html>

<head>
  <!-- Default Js -->
  <%- include("../master/head.ejs") %>
  <script src="/js/contents/master/mainUtil.js"></script>
  <script src="/js/contents/inverter/setInverter.js"></script>
</head>

<body>
  <div id="wrap" class="wrap hidden">
    <!-- Header -->
    <%- include("../master/header.ejs") %>
    <!--메인-->
    <div class="container_body">
      <div class="container_row flex_dir_col">
        <p class="table_desc_area">
          인버터 모니터링 측정시간 &nbsp; <span id="inverterMeasureTime"> 2018-10-17 10:27:00</span>
        </p>
        <div class="table-responsive default_area">
          <table class="table table-bordered number_table">
            <colgroup>
              <col width="12%" />
              <col width="8%" />
              <col width="7%" />
              <col width="7%" />
              <col width="7%" />
              <col width="8%" />
              <col width="8%" />
              <col width="8%" />
              <col width="8%" />
              <col width="6%" />
              <col width="8%" />
              <col width="8%" />
              <col width="5%" />
            </colgroup>
            <thead class="text-center">
              <tr>
                <th rowspan="2"></th>
                <th colspan="4">태양광</th>
                <th colspan="3">인버터</th>
                <th colspan="5">발전현황</th>
              </tr>
              <tr>
                <th>경사 일사량(W/㎥)</th>
                <th>DC 전류(A)</th>
                <th>DC 전압(V)</th>
                <th>DC 전력(kW)</th>
                <th>AC 전류(A)</th>
                <th>AC 전압(V)</th>
                <th>주파수(Hz)</th>
                <th>현재 전력(kW)</th>
                <th>효율(%)</th>
                <th>금일 발전량(kWh)</th>
                <th>누적 발전량(kWh)</th>
                <th>동작 여부</th>
              </tr>
            </thead>
            <tbody id="inverterStatus">
            </tbody>
          </table>
        </div>
      </div>
      <div class="container_row flex_dir_col">
        <p class="table_desc_area">
          금일 시간 별 전력
        </p>
        <article id="chart_div" class="lineChart_box default_area">
        </article>
      </div>
    </div>
    <!--하단1-->

    <%- include("../master/footer.ejs") %>

  </div>
  <script>
    // 인버터 측정 시간 입력
    document.getElementById('inverterMeasureTime').innerHTML = <%- JSON.stringify(measureInfo.measureTime) %>;

    // 인버터 현재 상태 데이터 테이블 생성
    $('#inverterStatus').html(<%- JSON.stringify(dom.inverterStatusListDom) %>)


    // 차트를 그리기 위한 데이터
    let inverterPowerChart = <%- JSON.stringify(inverterPowerChart) %>;

    console.log(_.head(inverterPowerChart.range))
    if (inverterPowerChart.series.length) {
      var yMax = 1500;

      $('#chart_div').highcharts({
        chart: {
          type: "spline",
          zoomType: 'xy',
        },
        title: {
          text: ''
        },
        xAxis: {
          type: 'datetime',
          title: {
            text: '시간(시)'
          },
          labels: {
            overflow: 'justify'
          },
          categories: inverterPowerChart.range
        },
        yAxis: {
          title: {
            text: '전력(kW)'
          },
        },
        plotOptions: {
          series: {
            pointStart: 0
          },
          spline: {
            lineWidth: 2,
            states: {
              hover: {
                lineWidth: 3
              }
            },
            marker: {
              enabled: false
            },
          }
        },
        legend: { //범례
          // layout: 'vertical',
          align: 'center',
          verticalAlign: 'bottom',
          borderWidth: 0,
        },
        series: inverterPowerChart.series,
        credits: {
          enabled: false
        },
      });
    } else {
      $("#chart_div").html("<h3>발전 내역이 존재하지 않습니다.</h3>");
    }
  </script>
</body>

</html>